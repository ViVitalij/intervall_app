<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_legs">

        <TextView
            android:gravity="center"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:id="@+id/mode_name"
            android:text="@string/mode_name"
            android:textColor="@color/bootstrap_brand_primary"

            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.067"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <EditText
            android:layout_width="222dp"
            android:layout_height="45dp"
            android:id="@+id/mode_name_editor"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.066"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/desription"
            android:text="@string/description"
            android:textColor="@color/bootstrap_brand_primary"
            android:gravity="center"
            android:layout_width="126dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mode_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.049"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <EditText
            android:layout_width="222dp"
            android:layout_height="38dp"
            android:id="@+id/description_select"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.863"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mode_name_editor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.049"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <Button
            android:background="@drawable/plus_box"
            android:layout_width="55dp"
            android:layout_height="41dp"
            android:id="@+id/add_mode"
            android:layout_marginLeft="8dp"
            custom:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            custom:layout_constraintRight_toRightOf="parent"
            custom:layout_constraintHorizontal_bias="0.856"
            custom:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            custom:layout_constraintVertical_bias="0.588" />
        <Button
            android:background="@drawable/minus_box"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:id="@+id/delete_mode"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            custom:layout_constraintLeft_toRightOf="@+id/add_mode"
            android:layout_marginRight="8dp"
            custom:layout_constraintRight_toRightOf="parent"
            custom:layout_constraintHorizontal_bias="1.0"
            custom:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            custom:layout_constraintVertical_bias="0.59" />
        <Button
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:id="@+id/time_picker"
            android:text="@string/choose_time_of_mode"
            android:background="@drawable/my_button"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="parent"

            custom:layout_constraintVertical_bias="0.474"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <it.beppi.tristatetogglebutton_library.TriStateToggleButton
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/intensityButton"
            custom:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            custom:tbOffColor="@color/mb_red_dark"
            custom:tbMidColor="@color/gray_very_light"
            custom:tbOnColor="@color/holo_green_light"
            custom:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            custom:layout_constraintRight_toRightOf="parent"
            custom:layout_constraintVertical_bias="0.342"
            />
        <TextView
            android:id="@+id/intensityTextView"
            android:layout_width="111dp"
            android:layout_height="43dp"
            custom:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            custom:layout_constraintVertical_bias="0.338"
            android:layout_marginRight="8dp"
            custom:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            custom:layout_constraintLeft_toLeftOf="parent"
            custom:layout_constraintHorizontal_bias="0.929" />
        <com.hookedonplay.decoviewlib.DecoView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            custom:dv_lineWidth="6dp"
            android:id="@+id/dynamicArcView"
            android:layout_width="0dp"
            android:layout_height="151dp"
            tools:layout_editor_absoluteX="0dp"
            custom:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            custom:layout_constraintVertical_bias="0.852" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textPercentage"
            android:gravity="center"
            custom:layout_constraintTop_toTopOf="@+id/dynamicArcView"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="@+id/dynamicArcView"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            custom:layout_constraintRight_toRightOf="@+id/dynamicArcView"
            android:layout_marginLeft="8dp"
            custom:layout_constraintLeft_toLeftOf="@+id/dynamicArcView" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            custom:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            custom:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            custom:layout_constraintVertical_bias="0.962"
            android:layout_marginLeft="8dp"
            custom:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            custom:layout_constraintRight_toRightOf="parent"
            custom:layout_constraintHorizontal_bias="0.975" />
</android.support.constraint.ConstraintLayout>
